<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:minWidth="1000dp"
                                                   android:minHeight="1000dp"
                                                   tools:context=".fragments.add_route.FullDialogFragment"
>

    <TextView
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/map"
            android:textSize="18sp"
            android:id="@+id/textView"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textInputEditText2"
            android:layout_marginStart="10dp"/>


    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/map"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:hint="Location, unique names"
            android:id="@+id/textInputEditText2"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/gps_location"
            android:text="GPS Location" android:id="@+id/textView2" tools:layout_editor_absoluteX="10dp"/>

    <RadioGroup
            android:id="@+id/gps_location"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textInputEditText2"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_location"
                android:checked="true"/>

        <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_map"/>

    </RadioGroup>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gps_location"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:layout_marginStart="8dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="124dp"
            android:id="@+id/guideline2"/>


</androidx.constraintlayout.widget.ConstraintLayout>